mixin options(value, text)
    option.form__option(value=value)= text

- const months = ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь']

doctype html
head
    title MCart-Test
    meta(charset='UTF-8')
    meta(name="viewport",content="width=device-width")
    link(rel="stylesheet",href="assets/css/styles.css")
body
    .container
        aside.description
            p.description__text TutuRu - крупнейший сервис поиска, бронирования и покупки авиабилетов и ж/д билетов.
            p.description__text Наша цель проста - делать наших клиентов счастливыми, а их путешествия незабываемыми. Любое путешествие начинается с поиска подходящих билетов и бронирования гостиниц. А мы делаем это качественно, обеспечивая самую лучшую поддержку благодаря собственному контакт-центру.
        .inner-container
            header
                nav.navigation
                    button.navigation__burger(type='button')
                        svg.navigation__burger-open(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 50 50' width='20px' height='20px')
                            path(d='M 0 7.5 L 0 12.5 L 50 12.5 L 50 7.5 Z M 0 22.5 L 0 27.5 L 50 27.5 L 50 22.5 Z M 0 37.5 L 0 42.5 L 50 42.5 L 50 37.5 Z')
                        svg.navigation__burger-close(xmlns='http://www.w3.org/2000/svg' viewbox='0 0 50 50' width='20px' height='20px')
                            path(d='M 9.15625 6.3125 L 6.3125 9.15625 L 22.15625 25 L 6.21875 40.96875 L 9.03125 43.78125 L 25 27.84375 L 40.9375 43.78125 L 43.78125 40.9375 L 27.84375 25 L 43.6875 9.15625 L 40.84375 6.3125 L 25 22.15625 Z')
                    ul.navigation__list
                        li.navigation__item
                            a.navigation__link.navigation__link--style-one(href='#') Личный кабинет
                        li.navigation__item
                            a.navigation__link.navigation__link--style-two(href='/stars.html') Stars
                        li.navigation__item
                            a.navigation__link.navigation__link--style-three(href='/progress.html') Progress Bar
                        li.navigation__item
                            a.navigation__link.navigation__link--style-four(href='/buttons.html') Buttons
                        li.navigation__item
                            a.navigation__link.navigation__link--style-five(href='#') Раздел 4
                        li.navigation__item
                            a.navigation__link.navigation__link--style-six(href='#') Раздел 5
            main.form
                .form__intro
                    h1.form__title Заполните форму
                    ul.form__steps
                        li.form__step.form__step--previous 1
                        li.form__step.form__step--previous 2
                        li.form__step.form__step--current 3
                        li.form__step.form__step--next 4
                        li.form__step.form__step--next 5
                .form__info-container
                    p.form__info Общая информация
                    .form__info-line
                form.form__wrapper(method='post', action='https://echo.htmlacademy.ru')
                    label.form__label.form__label--text Фамилия
                        input(type="text" name='surname')
                    label.form__label.form__label--text Имя
                        input(type="text" name='name')
                    label.form__label.form__label--text Отчество
                        input(type="text" name='patronymic')
                    .form__radio
                        p.form__text Меняли фамилию?
                        label.form__label.form__label--radio Да
                            input(type='radio' name='change-surname' value='yes')
                        label.form__label.form__label--radio Нет
                            input(type='radio' name='change-surname' value='no' checked)
                    .form__radio
                        p.form__text Пол
                        label.form__label.form__label--radio Муж
                            input(type='radio' name='gender' value='man' checked)
                        label.form__label.form__label--radio Жен
                            input(type='radio' name='gender' value='woman')
                    .form__selector
                        p.form__text Семейное положение
                        select.form__selector-options(name='maried')
                            option(value='yes') Женат / Замужем
                            option(value='no') Холост / Холоста
                            option(value='never mind') Не важно
                    .form__selector
                        p.form__text Гражданство
                        select.form__selector-options(name='nationality')
                            option(value='ru') Российская Федерация
                            option(value='foreigner') Другая страна
                            option(value='no') Нет гражданства
                    .form__selector.form__selector--date
                        p.form__text Дата рождения
                        .form__options-wrapper
                            select.form__selector-options(name='birthday-day')
                                - for (x = 1; x <= 31; x++)
                                    +options(x, x)
                            select.form__selector-options(name='birthday-month')
                                - for (x = 0; x <= 11; x++)
                                    +options(x + 1, months[x])
                            select.form__selector-options(name='birthday-year')
                                - for (x = 1930; x <= 2023; x++)
                                    +options(x, x)
                    label.form__label.form__label--textarea() Место рождения
                        textarea(name="birth-place",cols="30",rows="1")
                    .form__buttons
                        a.form__button.button(href='index.html') Назад
                        input.form__button.button.button--input(type='submit', value='Далее')
    script(type='module' src='assets/js/main.js')
